# Base Projects Improvement Analysis Configuration
# Copy this file to .env.analysis and fill in your values

# Repository URLs
ESSENCIA_REPO_URL=https://github.com/your-org/essencia.git
ESSENCIA_BRANCH=main
FNP_RANKING_REPO_URL=https://github.com/your-org/fnp-ranking.git
FNP_RANKING_BRANCH=main

# GitHub Access Tokens (optional but recommended for private repositories)
# Generate tokens at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos)
ESSENCIA_GITHUB_TOKEN=ghp_your_token_here
FNP_RANKING_GITHUB_TOKEN=ghp_your_token_here

# Analysis Configuration
ANALYSIS_TEMP_DIR=.temp/analysis
ANALYSIS_RESULTS_DIR=.kiro/analysis/results

# Security Settings
ENCRYPT_TOKENS=false
TOKEN_EXPIRATION_DAYS=90
REQUIRE_TWO_FACTOR=false

# Git Configuration
GIT_USER_NAME=Analysis Bot
GIT_USER_EMAIL=analysis@yourcompany.com

# Analysis Rules (comma-separated)
ENABLED_ANALYSIS_RULES=component-analysis,service-analysis,api-analysis,dependency-analysis

# Prioritization Weights
BUSINESS_VALUE_WEIGHT=1.0
TECHNICAL_COMPLEXITY_WEIGHT=0.8
RISK_LEVEL_WEIGHT=1.2

# Compatibility Rules
WHITE_LABEL_COMPATIBILITY_CHECK=true
API_BACKWARD_COMPATIBILITY_CHECK=true
DATABASE_MIGRATION_CHECK=true

# Performance Settings
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_TIMEOUT_MINUTES=30
CLEANUP_TEMP_FILES=true

# Logging
LOG_LEVEL=info
LOG_FILE=.kiro/analysis/logs/analysis.log
ENABLE_DEBUG_LOGGING=false